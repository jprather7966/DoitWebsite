@model List<TaskModel>


<div id="myDIV" class="header">
	<h2>My To Do List</h2>
</div>

<a href="/ToDoList/NewTask">Add New Task</a>
<table border="1">
	<tr>
		<th>Name</th>
		<th>Completed</th>
	</tr>
	@foreach (TaskModel task in Model)
	{
		string status = "not set";
		if (task.CompletionID == 1)
		{
			status = "Not Completed";
		}
		else
		{
			status = "Completed";
		}
		<tr>
			<td>@task.TaskName</td>
			<td>@status</td>

		</tr>
	 }
</table>


